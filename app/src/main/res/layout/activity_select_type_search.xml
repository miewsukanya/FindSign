<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_type_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="miewsukanya.com.findsign.SelectTypeSearch"
    android:background="@drawable/bg_p3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="@dimen/size_button3"
            android:layout_height="@dimen/size_button3"
            app:srcCompat="@drawable/btn_ar"
            android:id="@+id/ShowAR"
            android:padding="5dp"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="@dimen/size_button3"
            android:layout_height="@dimen/size_button3"
            app:srcCompat="@drawable/btn_map"
            android:id="@+id/ShowMap"
            android:padding="5dp"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtidSignSelect"
            android:layout_weight="1"
            android:padding="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtidDistSelect"
            android:layout_weight="1"
            android:padding="10dp" />
    </LinearLayout>
</RelativeLayout>
