<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="miewsukanya.com.findsign.SettingActivity"
    android:background="@drawable/bg_p3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="ตั้งค่าการแจ้งเตือน"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="383dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/RadGroupSign"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:text="เลือกป้าย"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                         />

                    <RadioButton
                        android:text="ป้าย45 ขึ้นไป"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton"
                        android:onClick="onSign"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"
                        android:checked="true"/>

                    <RadioButton
                        android:text="ป้าย60 ขึ้นไป"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2"
                        android:onClick="onSign"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"/>

                    <RadioButton
                        android:text="ป้าย80 ขึ้นไป"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton3"
                        android:onClick="onSign"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"/>
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/RadGroupDistance"
                    android:onClick="onDistance"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp">


                    <TextView
                        android:text="เลือกระยะการแจ้งเตือน"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        />

                    <RadioButton
                        android:text="แจ้งเตือนก่อน 300 ม."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rad300"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:onClick="onDistance"
                        android:checked="true"/>


                    <RadioButton
                        android:text="แจ้งเตือนก่อน 400 ม."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rad400"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:onClick="onDistance"/>

                    <RadioButton
                        android:text="แจ้งเตือนก่อน 500 ม."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rad500"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:padding="10dp"
                        android:onClick="onDistance"/>

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSignSetting" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDistanceSetting"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button

                    android:layout_width="279dp"
                    android:layout_height="77dp"
                    android:id="@+id/btn_saveSetting"
                    android:onClick="onSaveSetting"
                    android:background="@drawable/but_setting_enter" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
