<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="miewsukanya.com.findsign.MainActivity"
    android:background="@drawable/bg_p1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="54dp"
            app:srcCompat="@drawable/btn_setting"
            android:id="@+id/btn_setting"
            android:layout_marginLeft="280dp" />

        <ImageView
            app:srcCompat="@drawable/btn_searchq"
            android:id="@+id/SearchSignQuick"
            android:layout_marginTop="80dp"
            android:layout_width="@dimen/size_button3"
            android:layout_height="@dimen/size_button3"
            android:layout_gravity="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtidSignPref"
            android:layout_weight="1"
            android:textColor="@color/txtBg" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtidDistancePref"
            android:textColor="@color/txtBg" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="300dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/size_button4"
                app:srcCompat="@drawable/btn_select"
                android:id="@+id/SearchSign"
                android:layout_marginLeft="10dp"
                android:layout_height="@dimen/size_button4"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="@dimen/size_button4"
                android:layout_height="@dimen/size_button4"
                app:srcCompat="@drawable/btn_know"
                android:id="@+id/Knowledge"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
